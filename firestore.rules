// Firestore Security Rules
// ========================
// Copy these rules to your Firebase Console:
// 1. Go to Firestore Database > Rules tab
// 2. Replace the default rules with these
// 3. Click Publish

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Recipes collection
    match /recipes/{recipeId} {
      // Allow read/write for now (single user mode)
      // For multi-user, add: && request.auth != null && request.auth.uid == resource.data.userId
      allow read, write: if true;
    }
    
    // Weekly plans collection
    match /weeklyPlans/{planId} {
      allow read, write: if true;
    }
    
    // Settings collection
    match /settings/{settingId} {
      allow read, write: if true;
    }
  }
}

